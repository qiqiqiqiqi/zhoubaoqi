<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="12dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp">

    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/course_time_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-06-12  周五"
        android:textColor="#FF263238"
        android:textSize="15sp" />

    <View
        android:id="@+id/course_time_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="12dp"
        android:background="#EAEEF0 "
        app:layout_constraintTop_toBottomOf="@id/course_time_day" />

    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/course_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="18:30
完成智能课程  第12次"
        android:textColor="#FF263238"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/course_time_line" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/course_time_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="#EAEEF0 "
        app:layout_constraintTop_toBottomOf="@id/course_system" />

    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/course_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="18:30
完成教练课程  第13次"
        android:textColor="#FF263238"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/course_time_line2" />
</android.support.constraint.ConstraintLayout>